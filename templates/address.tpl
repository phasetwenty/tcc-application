<div class="address">
  <label for="{$id_prefix}address_to">{$address_to_label}:</label>
  <input class="to" type="text" name="{$name_prefix}address_to" id="{$id_prefix}address_to">
  <label for="{$id_prefix}address_city">City:</label>
  <input class="city" type="text" name="{$name_prefix}address_city" id="{$id_prefix}address_city">
  <label for="{$id_prefix}address_state">State:</label>
  <input class="state" type="text" name="{$name_prefix}address_state" id="{$id_prefix}address_state">
  <label for="{$id_prefix}address_zip">ZIP:</label>
  <input class="zip" type="text" name="{$name_prefix}address_zip" id="{$id_prefix}address_zip">
</div>